pipeline {
    agent any

    tools {
            maven 'maven1'
            jdk 'jdk'
        }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'mvn test'
            }
        }
    }
    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'Build succeeded!'
            junit '**/target/surefire-reports/TEST-*.xml'
            jacoco(execPattern: '**/target/jacoco.exec')
        }
        failure {
            echo 'Build failed!'
        }
    }
}
